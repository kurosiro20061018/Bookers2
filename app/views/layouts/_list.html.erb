<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @book, url: books_path) do |form| %>
  <h4>Title</h4>
  <%= form.text_field :title %>
  <h4>Body</h4>
  <%= form.text_area :body %>
  <%= form.submit 'Create Book' %>
<% end %>



