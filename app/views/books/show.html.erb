<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </thead>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user) do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>

          <%= render 'errors', book: @book %>
          <%= form_with(model: @book_new) do |form| %>
            <%= render 'list', form: form %>
          <% end %>

      </div>

      <div class="col-md-8 offset-md-1">
        <div class="row">
          <h1>Book detail</h1>
        </div>
        <div class="row">
          <table>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= link_to @user do %>
                    <%= image_tag(@user.get_profile_image(100,100)) %>
                    <%= link_to @book.user.name, user_path(@book.user) %>
                  <% end %>

                </td>
                <td>
                  <%= link_to @book.title, book_path(@book) %>
                  <%= @book.body %>
                </td>
              </tr>
              <tr>
                <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id) %></td>
                  <%= link_to "Destroy", book_path(@book), method: :delete , "data-confirm" => "本当に削除しますか？" %>
                <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

